<% if @chore.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@chore.errors.count, "error") %> prohibited this chore from being saved:</h2>

    <ul>
    <% @chore.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@chore, html: { class: "form-horizontal" }) do |f| %>
  <fieldset>
    
    <div class="control-group">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: "input-xlarge" %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :interval, class: "control-label" %>
      <div class="controls">
        <div class="input-append">
          <%= f.number_field :interval, in: 0..99999, class: "span1" %>
          <span class="add-on">days</span>
        </div>
        <p class="help-block">How many days between the times when this chore need to be done?</p>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :lead_time, class: "control-label" %>
      <div class="controls">
        <div class="input-append">
          <%= f.number_field :lead_time, in: 0..99999, class: "span1" %>
          <span class="add-on">days</span>
        </div>
        <p class="help-block">How many days before the due date can this chore be done?</p>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :start_date, class: "control-label" %>
      <div class="controls">
        <%= f.date_select :start_date %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", :back, class: "btn" %>
    </div>
    
  </fieldset>
<% end %>
