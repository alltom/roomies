<% if @resident.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@resident.errors.count, "error") %> prohibited this resident from being saved:</h2>

    <ul>
    <% @resident.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@resident, url: admin_resident_path(@resident), html: { class: "form-horizontal" }) do |f| %>
  <fieldset>
  
  User, Household, Active
    
    <div class="control-group">
      <%= f.label :user_id, class: "control-label" %>
      <div class="controls">
        <%= f.collection_select :user_id, User.all, :id, :email %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :household_id, class: "control-label" %>
      <div class="controls">
        <%= f.collection_select :household_id, Household.all, :id, :name %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", :back, class: "btn" %>
    </div>
    
  </fieldset>
<% end %>
