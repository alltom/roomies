<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <fieldset>
    
    <div class="control-group">
      <%= f.label :email, class: "control-label" %>
      <div class="controls">
        <%= f.email_field :email, class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, class: "control-label" %>
      <div class="controls">
        <%= f.password_field :password, class: "input-xlarge" %>
      </div>
    </div>
    
    <% if devise_mapping.rememberable? -%>
    <div class="control-group">
      <%= f.label :remember_me, "Remember Me", class: "control-label" %>
      <div class="controls">
        <%= f.label :remember_me, "#{f.check_box(:remember_me)} Stay signed in after I close this  window.".html_safe, class: "checkbox" %>
      </div>
    </div>
    <% end -%>

    <div class="form-actions">
      <%= f.submit "Sign In", class: "btn btn-primary" %>
      <%= link_to "Cancel", :back, class: "btn" %>
    </div>
    
  </fieldset>
<% end %>

<%= render "links" %>